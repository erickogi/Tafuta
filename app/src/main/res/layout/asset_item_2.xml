<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
		xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
		android:orientation="vertical"
		android:layout_width="match_parent"
		app:cardUseCompatPadding="true"
		app:cardElevation="4dp"
		app:cardCornerRadius="4dp"
		android:layout_height="wrap_content">
	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:orientation="horizontal"
	              android:padding="8dp"
	              android:weightSum="4">
		<TextView android:layout_width="60dp"
		          android:layout_height="60dp"
		          android:layout_gravity="center"
		          android:textAlignment="center"
		          android:text="r"
		          android:textAllCaps="true"
		          android:textSize="15pt"
		          android:textStyle="bold"
		          android:layout_margin="3dp"
		          android:background="@drawable/textview_bg_round"
		          android:textColor="@android:color/white"
		          android:padding="4dp"/>
		
		<LinearLayout android:layout_width="match_parent"
		              android:layout_height="match_parent"
		              android:layout_weight="3"
		              android:padding="0pt"
		              android:orientation="vertical">
			<TextView android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:id="@+id/asset_name"
			          android:text="Name"
			          android:textSize="8pt"
			          android:textStyle="bold"
			          android:textColor="#525151"/>
			<TextView android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:id="@+id/asset_type"
			          android:text="Type"
			          android:textSize="6pt"
			          android:textStyle="bold"
			          android:textColor="#7A7979"/>
			<TextView android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:id="@+id/asset_status"
			          android:text="Status"
			          android:textSize="5pt"
			          android:textColor="#7A7979"/>
			<TextView android:layout_width="match_parent"
			          android:visibility="gone"
			          android:layout_height="wrap_content"
			          android:id="@+id/asset_scancode"
			          android:layout_gravity="right"
			          android:text="43567890977"
			          android:gravity="right"
			          android:textSize="5pt"
			          android:textColor="#7A7979"/>
		</LinearLayout>
	
	</LinearLayout>

</com.google.android.material.card.MaterialCardView>