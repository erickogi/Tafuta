<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:background="@color/white" android:layout_height="match_parent">
	
	
	<LinearLayout android:layout_width="match_parent"
	              android:orientation="vertical"
	              android:layout_margin="6dp"
	              android:padding="4dp"
	              android:layout_height="match_parent">
		
		<com.google.android.material.textfield.TextInputLayout
				android:layout_width="match_parent"
				
				
				android:layout_marginBottom="10dp"
				
				style="@style/TextLabelDark"
				app:endIconMode="custom"
				app:endIconTint="@color/black"
				
				app:endIconTintMode="src_atop"
				android:hint="Code"
				android:textColorHint="@android:color/black"
				app:hintTextColor="@android:color/black"
				android:layout_height="wrap_content">
			<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/code"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					
					android:textColor="@android:color/black"
					android:layout_marginTop="20dp"
					android:textColorHint="@android:color/black"
					
					android:inputType="text"
			
			/>
		
		</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
				android:layout_width="match_parent"
				
				
				android:layout_marginBottom="10dp"
				
				style="@style/TextLabelDark"
				app:endIconMode="custom"
				app:endIconTint="@color/black"
				
				app:endIconTintMode="src_atop"
				android:hint="S/No"
				android:textColorHint="@android:color/black"
				app:hintTextColor="@android:color/black"
				android:layout_height="wrap_content">
			<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/asset_serial"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					
					android:textColor="@android:color/black"
					android:layout_marginTop="20dp"
					android:textColorHint="@android:color/black"
					
					android:inputType="text"
			
			/>
		
		</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
				android:layout_width="match_parent"
				
				
				android:layout_marginBottom="10dp"
				
				style="@style/TextLabelDark"
				app:endIconMode="custom"
				app:endIconTint="@color/black"
				
				app:endIconTintMode="src_atop"
				android:hint="Names"
				android:textColorHint="@android:color/black"
				app:hintTextColor="@android:color/black"
				android:layout_height="wrap_content">
			<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/asset_name"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					
					android:textColor="@android:color/black"
					android:layout_marginTop="20dp"
					android:textColorHint="@android:color/black"
					
					android:inputType="text"
			
			/>
		
		</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
				android:layout_width="match_parent"
				
				
				android:layout_marginBottom="10dp"
				
				style="@style/TextLabelDark"
				app:endIconMode="custom"
				app:endIconTint="@color/black"
				
				app:endIconTintMode="src_atop"
				android:hint="Condition"
				android:textColorHint="@android:color/black"
				app:hintTextColor="@android:color/black"
				android:layout_height="wrap_content">
			<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/asset_condition"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					
					android:textColor="@android:color/black"
					android:layout_marginTop="20dp"
					android:textColorHint="@android:color/black"
					
					android:inputType="text"
			
			/>
		
		</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
				android:layout_width="match_parent"
				
				
				android:layout_marginBottom="10dp"
				
				style="@style/TextLabelDark"
				app:endIconMode="custom"
				app:endIconTint="@color/black"
				
				app:endIconTintMode="src_atop"
				android:hint="Status"
				android:textColorHint="@android:color/black"
				app:hintTextColor="@android:color/black"
				android:layout_height="wrap_content">
			<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/status"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					
					android:textColor="@android:color/black"
					android:layout_marginTop="20dp"
					android:textColorHint="@android:color/black"
					
					android:inputType="text"
			
			/>
		
		</com.google.android.material.textfield.TextInputLayout>
		
		
		<LinearLayout android:layout_width="match_parent"
		              android:background="@drawable/bg_gray"
		
		              android:orientation="horizontal"
		              android:layout_height="wrap_content"
		
		>
			
			<Spinner
					android:id="@+id/typeName"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					
					android:textColor="@android:color/black"
					android:layout_marginTop="20dp"
					android:textColorHint="@android:color/black"
					
					android:inputType="text"
			
			/>
			<View android:layout_width="1dp"
			      android:background="@color/colorAccent"
			      android:layout_height="50dp"/>
			
			<Spinner
					android:id="@+id/departmentName"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					
					android:textColor="@android:color/black"
					android:layout_marginTop="20dp"
					android:textColorHint="@android:color/black"
					
					android:inputType="text"
			
			/>
		
		
		</LinearLayout>
	
	
	</LinearLayout>


</ScrollView>