<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
		xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
		android:orientation="vertical"
		android:layout_width="match_parent"
		app:cardUseCompatPadding="true"
		app:cardElevation="4dp"
		app:cardCornerRadius="4dp"
		android:layout_height="wrap_content">
	
	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:padding="2dp"
	              android:orientation="vertical">
		
		<TextView android:layout_width="match_parent"
		          android:layout_height="wrap_content"
		          android:id="@+id/timeStamp"
		          android:text="2019-04-02 03:00:00"
		          android:gravity="right"
		          android:layout_gravity="right"
		          android:textStyle="bold"
		          android:textSize="5pt"
		          android:textColor="@android:color/darker_gray"/>
		<TextView android:layout_width="match_parent"
		          android:layout_height="wrap_content"
		          android:id="@+id/actionNames"
		          android:text="Action Name"
		          android:textSize="8pt"
		          android:textStyle="bold"
		          android:textColor="#525151"/>
		<View android:layout_width="match_parent"
		      android:layout_height="0.1dp"
		      android:layout_marginTop="2dp"
		      android:background="@android:color/holo_blue_dark"/>
		
		<LinearLayout android:layout_width="match_parent"
		              android:layout_height="wrap_content"
		              android:orientation="horizontal"
		              android:padding="5pt"
		              android:weightSum="3">
			
			<TextView android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
			          android:id="@+id/initNames"
			          android:layout_weight="1"
			          android:textColor="#0F3333"
			          android:text="Initiator"/>
			<TextView android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
			          android:layout_weight="1"
			          android:layout_gravity="center"
			          android:gravity="center"
			          android:textStyle="bold"
			          android:text="~"/>
			<TextView android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
			          android:id="@+id/targetName"
			          android:layout_weight="1"
			          android:textColor="#013A19"
			          android:layout_gravity="right"
			          android:gravity="right"
			          android:text="Target"/>
		</LinearLayout>
		<TextView android:layout_width="match_parent"
		          android:layout_height="wrap_content"
		          android:id="@+id/description"
		          android:text="Description goes here"
		          android:gravity="left"
		          android:layout_gravity="left"
		          android:textStyle="bold"
		          android:textSize="6pt"
		          android:textColor="@android:color/darker_gray"/>
	
	</LinearLayout>


</com.google.android.material.card.MaterialCardView>