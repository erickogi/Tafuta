<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
	<RelativeLayout
			android:layout_width="wrap_content"
			android:id="@+id/rvTop"
			android:layout_height="wrap_content">
		
		<ImageView
				android:id="@+id/backdrop"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:src="@drawable/logo"
				android:layout_marginTop="-190dp"
				android:fitsSystemWindows="true"
				android:scaleType="centerCrop"
				app:layout_collapseMode="parallax"/>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textAlignment="center"
				android:layout_below="@+id/backdrop"
				android:gravity="top"
				android:orientation="vertical">
			
			<TextView
					android:id="@+id/title"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textAlignment="center"
					android:text="Asset Management System"
					android:textStyle="bold"
					android:textColor="@android:color/holo_orange_dark"
					android:textSize="13pt"/>
			
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textAlignment="center"
					android:text="Your organization's asset tracker"
					android:textColor="@android:color/darker_gray"
					android:textStyle="bold"
					android:textSize="20dp"/>
			<TextView android:layout_width="match_parent"
			          android:layout_height="0.1dp"
			          android:layout_marginTop="2dp"
			          android:layout_marginLeft="10dp"
			          android:layout_marginRight="10dp"
			          android:background="@android:color/holo_blue_dark"/>
			<TextView android:layout_width="match_parent"
			          android:layout_height="0.1dp"
			          android:layout_marginTop="2dp"
			          android:layout_marginLeft="20dp"
			          android:layout_marginRight="20dp"
			          android:background="@android:color/holo_blue_dark"/>
			<TextView android:layout_width="match_parent"
			          android:layout_height="0.1dp"
			          android:layout_marginTop="2dp"
			          android:layout_marginLeft="30dp"
			          android:layout_marginRight="30dp"
			          android:background="@android:color/holo_blue_dark"/>
		</LinearLayout>
	</RelativeLayout>
	<com.wang.avi.AVLoadingIndicatorView
			android:visibility="gone"
			android:id="@+id/avi"
			app:indicatorColor="@color/colorPrimary"
			android:layout_centerInParent="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:indicatorName="BallPulseSyncIndicator"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true"/>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_below="@+id/rvTop"
			android:id="@+id/llTop"
			android:padding="10dp"
			android:weightSum="2">
		<LinearLayout
				android:layout_width="0dp"
				android:layout_weight="1"
				android:padding="3dp"
				android:orientation="vertical"
				android:layout_margin="1dp"
				android:background="@drawable/ll_style"
				android:layout_height="wrap_content">
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="All assets"
					android:textStyle="bold"
					android:textAlignment="center"
					android:layout_gravity="center"
					android:textSize="12pt"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/allAssets"
					android:text="300"
					android:textStyle="normal"
					android:textColor="@android:color/holo_green_dark"
					android:layout_gravity="center"
					android:textSize="10pt"/>
		</LinearLayout>
		<LinearLayout
				android:layout_width="0dp"
				android:layout_weight="1"
				android:padding="3dp"
				android:orientation="vertical"
				android:layout_margin="1dp"
				android:background="@drawable/ll_style"
				android:layout_height="wrap_content">
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Active assets"
					android:textStyle="bold"
					android:textAlignment="center"
					android:layout_gravity="center"
					android:textSize="12pt"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="300"
					android:id="@+id/allActive"
					android:textStyle="normal"
					android:textColor="@android:color/holo_green_dark"
					android:layout_gravity="center"
					android:textSize="10pt"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:id="@+id/llMiddle"
			android:layout_below="@+id/llTop"
			android:padding="10dp"
			android:weightSum="1">
		<LinearLayout
				android:layout_width="0dp"
				android:layout_weight="1"
				android:padding="3dp"
				android:orientation="vertical"
				android:background="@drawable/ll_style"
				android:layout_height="wrap_content">
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Un-Assigned assets"
					android:textStyle="bold"
					android:textAlignment="center"
					android:layout_gravity="center"
					android:textSize="12pt"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="300"
					android:id="@+id/allUnassigned"
					android:textStyle="normal"
					android:textColor="@android:color/holo_green_dark"
					android:layout_gravity="center"
					android:textSize="10pt"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_below="@+id/llMiddle"
			android:visibility="gone"
			android:id="@+id/llBottom"
			android:padding="10dp"
			android:weightSum="2">
		<LinearLayout
				android:layout_width="0dp"
				android:layout_weight="1"
				android:padding="3dp"
				android:orientation="vertical"
				android:layout_margin="1dp"
				android:background="@drawable/ll_style"
				android:layout_height="wrap_content">
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Users"
					android:textStyle="bold"
					android:textAlignment="center"
					android:layout_gravity="center"
					android:textSize="12pt"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/allUsers"
					android:text="300"
					android:textStyle="normal"
					android:textColor="@android:color/holo_blue_dark"
					android:layout_gravity="center"
					android:textSize="10pt"/>
		</LinearLayout>
		<LinearLayout
				android:layout_width="0dp"
				android:layout_weight="1"
				android:padding="3dp"
				android:orientation="vertical"
				android:layout_margin="1dp"
				android:background="@drawable/ll_style"
				android:layout_height="wrap_content">
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Active users"
					android:textStyle="bold"
					android:textAlignment="center"
					android:layout_gravity="center"
					android:textSize="12pt"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="300"
					android:id="@+id/allActiveUsers"
					android:textStyle="normal"
					android:textColor="@android:color/holo_blue_dark"
					android:layout_gravity="center"
					android:textSize="10pt"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="5dp"
			android:weightSum="3"
			android:layout_marginBottom="20dp"
			android:layout_alignParentBottom="true">
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:padding="0dp"
				android:background="@drawable/button_bg_round"
				android:layout_height="wrap_content">
			<ImageView
					android:layout_gravity="center"
					android:gravity="center_horizontal"
					android:layout_margin="4dp"
					android:src="@drawable/scan"
					android:layout_width="60dp"
					android:layout_height="60dp"/>
			<TextView android:layout_width="match_parent"
			          android:text="Scan"
			          android:gravity="center_horizontal"
			          android:textColor="@android:color/holo_blue_dark"
			          android:textStyle="bold"
			          android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
			          android:layout_height="wrap_content"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:padding="0dp"
				android:background="@drawable/button_bg_round"
				android:layout_height="wrap_content"
				android:layout_weight="1">
			<ImageView
					android:layout_margin="4dp"
					android:gravity="center_horizontal"
					android:layout_gravity="center"
					android:src="@drawable/ic_add_black_24dp"
					android:layout_width="60dp"
					android:layout_height="60dp"/>
			<TextView android:layout_width="match_parent"
			          android:text="New"
			          android:gravity="center_horizontal"
			          android:textColor="@android:color/holo_blue_dark"
			          android:textStyle="bold"
			          android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
			          android:layout_height="wrap_content"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:background="@drawable/button_bg_round">
			<ImageView
					android:layout_gravity="center"
					android:gravity="center_horizontal"
					android:layout_margin="4dp"
					android:src="@drawable/list"
					android:layout_width="60dp"
					android:layout_height="60dp"/>
			<TextView android:layout_width="match_parent"
			          android:text="List"
			          android:gravity="center_horizontal"
			          android:textColor="@android:color/holo_blue_dark"
			          android:textStyle="bold"
			          android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
			          android:layout_height="wrap_content"/>
		
		</LinearLayout>
	</LinearLayout>
	<TextView android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:layout_alignParentBottom="true"
	          android:textAlignment="center"
	          android:textColor="@android:color/background_dark"
	          android:textStyle="bold"
	          android:layout_marginBottom="5dp"
	          android:text="Asset management system | Academic course Project "/>
</RelativeLayout>