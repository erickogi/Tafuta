<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
	<com.stepstone.stepper.StepperLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:app="http://schemas.android.com/apk/res-auto"
			android:id="@+id/stepperLayout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
			app:ms_backButtonColor="@color/black"
			app:ms_completeButtonColor="@color/colorAccent"
			app:ms_nextButtonColor="@color/colorAccent"
			app:ms_activeStepColor="@color/colorAccent"
			
			
			app:ms_showErrorMessageEnabled="true"
			
			app:ms_stepperFeedbackType="content_progress|disabled_bottom_navigation"
			app:ms_stepperType="dots"
			app:ms_tabNavigationEnabled="true"
	
	
	/>
	<com.wang.avi.AVLoadingIndicatorView
			android:visibility="gone"
			android:id="@+id/avi"
			app:indicatorColor="@color/colorPrimary"
			android:layout_centerInParent="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:indicatorName="BallPulseSyncIndicator"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true"/>
</RelativeLayout>