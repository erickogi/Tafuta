<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">
	
	
	
		<RelativeLayout
				android:layout_below="@+id/toolbar"
				android:layout_centerInParent="true"
				android:layout_marginTop="12dp"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
	
			<LinearLayout
					android:orientation="vertical"
					android:layout_margin="5dp"
					android:layout_width="match_parent"
					android:layout_below="@+id/asset_image"
					android:layout_height="match_parent">
				
				<com.google.android.material.card.MaterialCardView
						android:layout_width="match_parent"
						app:cardUseCompatPadding="true"
						android:padding="12dp"
						app:cardCornerRadius="4dp"
						app:cardElevation="4dp"
						android:visibility="visible"
						android:layout_height="wrap_content">
					<RelativeLayout
							android:padding="12dp"
							android:layout_width="match_parent"
							android:layout_height="wrap_content">
						<LinearLayout
								android:orientation="vertical"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content">
							<TextView
									android:textColor="@color/black"
									android:textStyle="bold"
									android:layout_width="wrap_content"
									android:text="Asset Permissions"
									android:layout_height="wrap_content"/>
							<TextView
									android:textColor="@color/black"
									android:textStyle="italic"
									android:layout_width="wrap_content"
									android:text="To assign View,Edit and Delete Permissions"
									android:layout_height="wrap_content"/>
						</LinearLayout>
						
						<ImageView
								android:layout_alignParentEnd="true"
								android:src="@drawable/ic_navigate_next_black_24dp"
								android:layout_width="wrap_content"
								
								android:layout_height="wrap_content"/>
					
					</RelativeLayout>
				
				</com.google.android.material.card.MaterialCardView>
				<com.google.android.material.card.MaterialCardView
						android:layout_width="match_parent"
						app:cardUseCompatPadding="true"
						android:padding="12dp"
						android:visibility="visible"
						app:cardCornerRadius="4dp"
						app:cardElevation="4dp"
						android:layout_height="wrap_content">
					<RelativeLayout
							android:padding="12dp"
							android:layout_width="match_parent"
							android:layout_height="wrap_content">
						<LinearLayout
								android:orientation="vertical"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content">
							
							<TextView
									android:textColor="@color/black"
									android:textStyle="bold"
									android:layout_width="wrap_content"
									android:text="Alerts and Notifications"
									android:layout_height="wrap_content"/>
							<TextView
									android:textColor="@color/black"
									android:textStyle="italic"
									android:layout_width="wrap_content"
									android:text="Create alerts when asset is modified"
									android:layout_height="wrap_content"/>
						</LinearLayout>

						<ImageView
								android:layout_alignParentEnd="true"
								android:src="@drawable/ic_navigate_next_black_24dp"
								android:layout_width="wrap_content"
								
								android:layout_height="wrap_content"/>
					
					</RelativeLayout>
				
				</com.google.android.material.card.MaterialCardView>
				
				<LinearLayout
						android:orientation="vertical"
						android:background="@drawable/bg_gray"
						android:layout_width="match_parent"
						android:layout_height="match_parent">
					<TextView
							android:padding="6dp"
							android:textColor="@color/black"
							android:textStyle="bold"
							android:textAlignment="center"
							android:layout_gravity="center_vertical"
							android:layout_width="match_parent"
							android:text="Click on 'Create New Custome Fileds' button below to add other fields for this asset (eg - Color,Shape,Department)"
							android:layout_height="wrap_content"/>
					<com.google.android.material.button.MaterialButton
							android:id="@+id/addCustomField"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="Create New Custom Field"
							android:layout_margin="5dp"
							android:gravity="center"
							
							style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
							
							android:layout_gravity="end"
							android:layout_marginBottom="12dp"
							android:textAppearance="@style/Widget.MaterialComponents.Button.TextButton"
							android:textColor="@color/white"
							
							android:textSize="16.5sp"
							android:textStyle="bold"
							app:backgroundTint="@color/colorAccent"
							app:cornerRadius="5dp"
							
							app:rippleColor="@color/colorPrimary"
					
					
					/>
					
					<androidx.recyclerview.widget.RecyclerView
							android:layout_width="match_parent"
							android:layout_margin="4dp"
							android:layout_height="match_parent">
					
					</androidx.recyclerview.widget.RecyclerView>
				
				
				
				</LinearLayout>
			
			
			</LinearLayout>
		
		
		
		</RelativeLayout>


</RelativeLayout>